@{
    ViewBag.Title = "Chicago In A Box";
    ViewBag.HeaderMessage = "Send Iconic Chicago items to loved ones!";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <a href="~/Home/AssembleBox">
                <hgroup class="title">
                    <h1>@ViewBag.HeaderMessage</h1>
                    <h2 id="hideOnMobile">@ViewBag.Message</h2>
                </hgroup>
            </a>
            <p class="hideMobile">
                We create <a href="~/Home/AssembleBox"><mark>Care Packages with a Chicago flavor</mark></a> for family or friends who need some extra love! Order from our selection of items and design your own custom care package.
            </p>
        </div>
    </section>
}
<div class="row" id="orderNow">
    <div class="col-xs-12 col-lg-12">
        <div class="col-xs-4 col-md-5 col-lg-5"></div>
        <div class="col-xs-4">
            <a href="@Url.Action("AssembleBox", new { controller = "Home" })">
                <img id="chicagoinaboximg" src="~/Images/ChicagoInABox.png" alt="Alternate Text" />
            </a>
        </div>
    </div>
    <div id="orderNowText" class="col-xs-12 col-lg-12 text-center">
        <h5>@Html.ActionLink("Order Now", "AssembleBox", new { controller = "Home" }, new { @class = "boxSelection" })</h5>
    </div>
</div>
