    <legend>
        <h1>@ViewBag.Message</h1>
        <h2>Do you have a question thats not on this list? Contact us using the form below!</h2>
    </legend>
    <section class="row" id="contact">

        @using (Html.BeginForm("FAQ", "Home", FormMethod.Post, new { role = "form", @class = "form-group form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <label for="name">Name</label>
                <input required type="text" id="name" name="Question.Name" class="form-control" placeholder="John Doe">
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <label for="subject">Subject</label>
                <input required id="subject" type="text" name="Question.Subject" class="form-control" placeholder="Subject">
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <label for="email">Email</label>
                <input required type="email" id="email" name="Question.Email" class="form-control margin-bottom" placeholder="chicagoinabox@example.com">
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <label for="message">Suggestions</label>
                <textarea style="width:100%;" id="message" name="Question.Message" spellcheck="true" class="form-control margin-bottom" rows="8" placeholder="Your message here.."></textarea>
            </div>
            <div class="col-lg-offset-4 col-lg-4 col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4 col-xs-12">
                <button type="submit" value="Create" class="btn btn-primary btn-block btn-lg">Send <i class="ion-android-arrow-forward"></i></button>
            </div>
        }
    </section>

</div>
