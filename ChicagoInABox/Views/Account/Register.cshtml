    <section class="row" id="contact">

            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form", @class = "form-group form-horizontal" }))
            {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
                <div class="form-group">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <label for="firstName">First Name</label>
                            <input required type="text" id="firstName" name="FirstName" class="form-control" placeholder="John">
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <label for="lastName">Last Name</label>
                            <input required id="lastName" type="text" name="LastName" class="form-control" placeholder="Doe">
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <label for="userName">User Name</label>
                            <input required type="text" id="userName" name="Email" class="form-control" placeholder="Chicago">
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <label for="email">Email</label>
                            <input required type="email" id="email" name="Email" class="form-control" placeholder="chicagoinabox@example.com">
                    </div>
                    <div class="col-lg-12 col-xs-12">
                            <label for="password">Password</label>
                            <input required type="password" id="password" name="Password" class="form-control" placeholder="Password...">
                    </div>
                    <div class="col-lg-12 col-xs-12">
                            <label for="confirmPassword">Confirm Password</label>
                            <input required type="password" name="confirmPassword" class="form-control" placeholder="Confirm Password...">
                    </div>
                    <div class="col-lg-offset-4 col-lg-4 col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4 col-xs-12">
                        <button type="submit" value="Register" class="btn btn-primary btn-block btn-lg">Register <i class="ion-android-arrow-forward"></i></button>
                    </div>
                </div>
        }
    </section>


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
