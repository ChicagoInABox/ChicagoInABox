@model ChicagoInABox.Models.LoginModel

@{
    ViewBag.Title = "Use an existing account to log in.";
}
<div class="container">
    @section featured {
        <section class="featured" style="padding-bottom: 0px;">
            <div class="content-wrapper">
                <hgroup class="title" style="margin-bottom: 0px;">
                    <h2>@ViewBag.Title @ViewBag.Message</h2>
                </hgroup>
            </div>
        </section>
    }
    <div class="spacer"></div>


    <section class="row" id="contact">

        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl , role = "form", @class = "form-group form-horizontal" }))
        {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                <div class="row">
                    <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-3 col-xs-12">
                        <fieldset class="form-group">
                            <label for="email">Email</label>
                            <input required type="email" id="email" name="Email" class="form-control" placeholder="chicagoinabox@example.com">
                        </fieldset>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-3 col-xs-12">
                        <fieldset class="form-group">
                            <label for="password">Password</label>
                            <input required type="password" id="password" name="Password" class="form-control" placeholder="Password...">
                        </fieldset>
                    </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-3 col-xs-12">
                            <div class="form-group">
                                <label><input type="checkbox" id="RememberMe" name="RememberMe">Remember me</label>
                            </div>
                        </div>
                    </div>
                <div class="col-lg-offset-4 col-lg-4 col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4 col-xs-12">
                    <button type="submit" value="Login" class="btn btn-primary btn-block btn-lg">Login <i class="ion-android-arrow-forward"></i></button>
                </div>
        }
    </section>

