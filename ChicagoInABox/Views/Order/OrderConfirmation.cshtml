@model ChicagoInABox.Models.ViewModel.ItemViewModel

@{
    ViewBag.Title = "Order Confirmation";
}
@section featured {
    <section class="featured" style="padding-bottom: 0px;">
        <div class="content-wrapper">
            <hgroup class="title" style="margin-bottom: 0px;">
                <h2>@ViewBag.Title. @ViewBag.Message</h2>
            </hgroup>
        </div>
    </section>
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <h2>Order Confirmation</h2>
    <fieldset>
        <p>
            Thank you for your Order! Your Chicago In A Box should be shipping in 1 - 3 days. 
            You will receive a an email confirmation to confirm that your order has been placed.
            Track your package using the USPS tracking service:
        </p>
        <fieldset>
            <legend>User Info</legend>
            <div class="display-label">
                <h2>Contact Information:</h2>
            </div>
            @Html.HiddenFor(model => model.User.UserID)
            @Html.HiddenFor(model => model.User.UserName)
            <div class="editor-label">
                @Html.LabelFor(model => model.User.FirstName)
            </div>
            <div class="display-label">
                @Html.DisplayFor(model => model.User.FirstName)
                @Html.HiddenFor(model => model.User.FirstName)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.User.LastName)
            </div>
            <div class="display-label">
                @Html.DisplayFor(model => model.User.LastName)
                @Html.HiddenFor(model => model.User.LastName)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.User.Email)
            </div>
            <div class="display-label">
                @Html.DisplayFor(model => model.User.Email)
                @Html.HiddenFor(model => model.User.Email)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.User.Phone)
            </div>
            <div class="display-label">
                @Html.DisplayFor(model => model.User.Phone)
                @Html.HiddenFor(model => model.User.Phone)
            </div>
        </fieldset>
        <fieldset>
            <legend>Billing Details</legend>
            <h2>Billing Information:</h2>
            <div class="editor-label">
                @Html.LabelFor(model => model.Address1.Address1)
            </div>
            <div class="editor-field">
                @Html.DisplayFor(model => model.Address1.Address1)
                @Html.HiddenFor(model => model.Address1.Address1)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Address1.City)
            </div>
            <div class="editor-field">
                @Html.DisplayFor(model => model.Address1.City)
                @Html.HiddenFor(model => model.Address1.City)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Address1.State)
            </div>
            <div class="editor-field">
                @Html.DisplayFor(model => model.Address1.State)
                @Html.HiddenFor(model => model.Address1.State)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Address1.Zip)
            </div>
            <div class="editor-field">
                @Html.DisplayFor(model => model.Address1.Zip)
                @Html.HiddenFor(model => model.Address1.Zip)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Address1.Country)
            </div>
            <div class="editor-field">
                @Html.DisplayFor(model => model.Address1.Country)
                @Html.HiddenFor(model => model.Address1.Country)
            </div>
        </fieldset>

            <fieldset>
                <legend>Shipping Address</legend>
                <div id="AlternateShippingAddress" style="display: inline;">
                    <h2>Shipping Address</h2>
                    <div class="editor-label">
                    </div>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Address.Address1)
                    </div>
                    <div class="editor-field">
                        @Html.DisplayFor(model => model.Address.Address1)
                        @Html.HiddenFor(model => model.Address.Address1)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(model => model.Address.City)
                    </div>
                    <div class="editor-field">
                        @Html.DisplayFor(model => model.Address.City)
                        @Html.HiddenFor(model => model.Address.City)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(model => model.Address.State)
                    </div>
                    <div class="editor-field">
                        @Html.DisplayFor(model => model.Address.State)
                        @Html.HiddenFor(model => model.Address.State)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(model => model.Address.Zip)
                    </div>
                    <div class="editor-field">
                        @Html.DisplayFor(model => model.Address.Zip)
                        @Html.HiddenFor(model => model.Address.Zip)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(model => model.Address.Country)
                    </div>
                    <div class="editor-field">
                        @Html.DisplayFor(model => model.Address.Country)
                        @Html.HiddenFor(model => model.Address.Country)
                    </div>
                </div>
            </fieldset>
        <div class="editor-label">
            <fieldset>
                <legend>Payment Detail</legend>
                <div class="editor-label">
                    @Html.Label("Order Quantity")
                </div>
                <div class="editor-field">
                    @Html.DisplayFor(model => model.OrderQty)
                    @Html.HiddenFor(model => model.OrderQty)
                </div>

                <div class="editor-label">
                    @Html.Label("Number of items in each box")
                </div>
                <div class="editor-field">
                    @Html.DisplayFor(model => model.OrderSize)
                    @Html.HiddenFor(model => model.OrderSize)
                </div>

                <div class="editor-label">
                    @Html.Label("Total Payment Amount")
                </div>
                <div class="editor-field">
                    @Html.DisplayFor(model => model.OrderTotal)
                    @Html.HiddenFor(model => model.OrderTotal)
                </div>

            </fieldset>
        </div>

        <p>
            @Html.ActionLink("Back to the Homepage", "Index", "Home")
        </p>
    </fieldset>
}